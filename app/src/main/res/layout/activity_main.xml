<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Reload Chrome"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-refresh web pages every 2-3 seconds"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="30dp"
            android:gravity="center" />

        <!-- Permission Status Cards -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permissions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/statusOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overlay Permission: Checking..."
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:background="#EEEEEE"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/statusAccessibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accessibility Service: Checking..."
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:background="#EEEEEE" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Instructions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to Use"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Enable Overlay Permission (button below)\n2. Enable Accessibility Service (button below)\n3. Click 'Start Floating Button'\n4. Go to Chrome and open any website\n5. Tap the floating dot and press 'Start'\n6. Page will auto-reload every 2-3 seconds!"
                    android:textSize="13sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnStartService"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Start Floating Button"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#2196F3"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnStopService"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Stop Floating Button"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#F44336"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnOpenAccessibility"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Open Accessibility Settings"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#FF9800" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Accessibility Settings, find 'Auto Reload Chrome' and enable it"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="12dp"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>
